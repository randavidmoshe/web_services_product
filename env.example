# =============================================================================
# Quathera Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# For CI/CD: Set these as secrets in GitHub Actions / GitLab CI
# =============================================================================

# -----------------------------------------------------------------------------
# Environment (development | production)
# -----------------------------------------------------------------------------
ENVIRONMENT=development
NODE_ENV=development

# -----------------------------------------------------------------------------
# URLs (change for production)
# -----------------------------------------------------------------------------
NEXTAUTH_URL=https://localhost
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_APP_URL=https://localhost

# -----------------------------------------------------------------------------
# Security Secrets (MUST change for production!)
# Generate with: openssl rand -hex 32
# -----------------------------------------------------------------------------
JWT_SECRET=dev-jwt-secret-change-in-production
NEXTAUTH_SECRET=dev-secret-change-in-production
POSTGRES_PASSWORD=password

# -----------------------------------------------------------------------------
# CORS Origins (comma-separated)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://localhost

# -----------------------------------------------------------------------------
# Claude API Key (required)
# -----------------------------------------------------------------------------
CLAUDE_API_KEY=

# -----------------------------------------------------------------------------
# AWS Configuration (required for screenshots)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=form-discoverer-screenshots

# -----------------------------------------------------------------------------
# Super Admin (optional - defaults provided for development)
# -----------------------------------------------------------------------------
SUPER_ADMIN_EMAIL=admin@formfinder.com
SUPER_ADMIN_PASSWORD=
SUPER_ADMIN_NAME=Super Admin

# -----------------------------------------------------------------------------
# Ports (set to empty to disable external access in production)
# -----------------------------------------------------------------------------
DB_PORT=5432
REDIS_PORT=6379
